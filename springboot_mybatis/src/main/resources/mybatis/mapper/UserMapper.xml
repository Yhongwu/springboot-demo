<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.howard.springboot10.dao.UserMapper">
    <resultMap type="com.howard.springboot10.domain.User" id="user">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" javaType="INTEGER"/>

    </resultMap>
    <select id="findByName" parameterType="java.lang.String" resultMap="user">
        select * from user where name = #{name}
    </select>
    <insert id="insert">
        insert into user (id,name,age) values (#{id},#{name},#{age})
    </insert>
</mapper>